<Window x:Class="CSIFLEX.PartAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSIFLEX.PartAnalyzer"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:views="clr-namespace:CSIFLEX.PartAnalyzer.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>
            <Grid Margin="4,2"
                  Width="170"
                  IsEnabled="{Binding CanEnterPartNumber}"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox Controls:TextBoxHelper.Watermark="Enter erp id"                              
                                     Text="{Binding ErpId, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Command="{Binding Path=SearchErpId}" Key="Enter" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button Grid.Column="1"
                        ToolTip="Search by part number or job number"
                        Margin="4,2"
                        Command="{Binding SearchErpId}"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding CanSearch, UpdateSourceTrigger=PropertyChanged}">
                    <iconPacks:PackIconMaterial Kind="Magnify" 
                                                        Height="12"/>
                </Button>
                <TextBlock Grid.ColumnSpan="2"
                           Grid.Row="1"
                           Text="Advanced Search Options"
                           FontSize="10"
                           Margin="0,4,0,0"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#FF0C65FF">
                    <TextBlock.InputBindings>
                        <MouseBinding Command="{Binding DisplayTextSearchOptions}" MouseAction="LeftClick" />
                    </TextBlock.InputBindings>
                </TextBlock>
            </Grid>
            <Rectangle Fill="LightGray"
                       Grid.Column="1"
                       Margin="2,4"/>
            <Button Margin="4,2"
                    Grid.Column="2" 
                    Command="{Binding OpenConnectionSettingsWindow}"
                    ToolTip="Connection Settings"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                <iconPacks:PackIconMaterial Kind="Settings"
                                            Foreground="Gold"
                                            Height="12"/>
            </Button>

            <Rectangle Fill="LightGray"
                       Grid.Column="3"
                       Margin="2,4"/>
            <Button Margin="4,2"
                    Grid.Column="4" 
                    Command="{Binding ExportToCSV}"
                    ToolTip="Export to CSV"
                    IsEnabled="{Binding CanExportToCSV}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                <iconPacks:PackIconMaterial Kind="Export"
                                            Foreground="Green"
                                            Height="12"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" 
                    Grid.Column="0" 
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="4,2" 
                    HorizontalAlignment="Left" 
                    CornerRadius="2">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0">
                        <TextBlock VerticalAlignment="Center"
                                   Text="{Binding ERPListTitle, UpdateSourceTrigger=PropertyChanged}"/>
                        <Rectangle Width="1"
                                   Fill="LightGray"
                                   Margin="2"/>
                        <CheckBox IsChecked="{Binding EntitiesIsExportToCSV}"
                                  Margin="2"
                                  Visibility="{Binding ErpListCountIsGreaterThanZero, Converter={StaticResource BoolToVisibiltyConverter}}"/>
                        <TextBlock Text="Export To CSV"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ErpListCountIsGreaterThanZero, Converter={StaticResource BoolToVisibiltyConverter}}"/>
                    </StackPanel>

                    <DataGrid CanUserAddRows="False"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              IsReadOnly="True" 
                              ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" 
                              ItemsSource="{Binding ProductionsTasks, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ERPEntitySelected}" 
                                                           CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Description" 
                                                Width="*" 
                                                Binding="{Binding Path=OperationDescription1}"/>
                            <DataGridTextColumn Header="Part" 
                                                Width="*" 
                                                Binding="{Binding Path=PartNumber}"/>
                            <DataGridTextColumn Header="Job Number" 
                                                Width="*" 
                                                Binding="{Binding Path=JobCode}"/>
                            <DataGridTextColumn Header="Work Order Number"
                                                Width="*"
                                                Binding="{Binding Path=WorkOrderCode}"/>
                            <DataGridTextColumn Header="Planned Quantity"
                                                Width="*"
                                                Binding="{Binding Path=PlannedQuantity}"/>
                            <DataGridTextColumn Header="Produced Quantity"
                                                Width="*"
                                                Binding="{Binding Path=ProducedQuantity}"/>
                            <DataGridTextColumn Header="Rejected Quantity"
                                                Width="*"
                                                Binding="{Binding Path=RejectedQuantity}"/>
                            <DataGridTextColumn Header="Task Start Date"
                                                Width="*"
                                                Binding="{Binding Path=TaskStartDate}"/>
                            <DataGridTextColumn Header="Task End Date"
                                                Width="*"
                                                Binding="{Binding Path=TaskEndDate}"/>
                            <DataGridTextColumn Header="Completed Date"
                                                Width="*"
                                                Binding="{Binding Path=CompletedDate}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!--<Grid Visibility="{Binding IsMachineVisible, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisibiltyConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               VerticalAlignment="Center"         
                               Text="{Binding MachineListTitle, UpdateSourceTrigger=PropertyChanged}"/>
                    <ScrollViewer x:Name="lvScroll"
                             Grid.Row="1" >
                        <ListBox ItemsSource="{Binding EntityCollection2}"  
                             ItemTemplate="{StaticResource EntityTemplate}"   
                             x:Name="lv">
                            <ListBox.GroupStyle>
                                <GroupStyle HeaderTemplate="{StaticResource HeaderGroupStyle}"/>
                            </ListBox.GroupStyle>
                        </ListBox>
                    </ScrollViewer>

                </Grid>-->

            </Border>
            <Border Grid.Row="1" 
                    Grid.Column="1" 
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="4,2" 
                    HorizontalAlignment="Left" 
                    CornerRadius="2">
                <Grid  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Grid.Row="0"
                               VerticalAlignment="Center"         
                               Text="{Binding MachineListTitle, UpdateSourceTrigger=PropertyChanged}"/>
                        <Rectangle Fill="LightGray"
                                   Width="1"
                                   Margin="2"/>
                        <CheckBox IsChecked="{Binding MachinePartsListIsExportToCSV}"
                                  Margin="2"
                                  Visibility="{Binding PartListIsGreaterThanZero, Converter={StaticResource BoolToVisibiltyConverter}}"/>
                        <TextBlock Text="Export To CSV"
                                   VerticalAlignment="Center"
                                   Margin="2"
                                   Visibility="{Binding PartListIsGreaterThanZero, Converter={StaticResource BoolToVisibiltyConverter}}"/>

                    </StackPanel>
                    <DataGrid CanUserAddRows="False"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserSortColumns="True"
                              IsReadOnly="True" 
                              ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"                              
                              ItemsSource="{Binding CSIFLEXProducedParts, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding DataGridSelectedItem}" 
                                                           CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Machine Name"
                                                    Width="*"
                                                    Binding="{Binding Path=MachineName}"/>
                            <DataGridTextColumn Header="Part Number"
                                                    Width="*"
                                                    Binding="{Binding Path=PartNumber}"/>
                            <DataGridTextColumn Header="Production Date Start"
                                                    Width="*"
                                                    Binding="{Binding Path=ProductionStartTime}"/>
                            <DataGridTextColumn Header="Production Date End"
                                                    Width="*"
                                                    Binding="{Binding Path=ProductionEndTime}"/>
                            <DataGridTextColumn Header="Total Cycle On"
                                                    Width="*"
                                                    Binding="{Binding Path=TotalCycleOntime}"/>
                            <DataGridTextColumn Header="Total Cycle Off"
                                                    Width="*"
                                                    Binding="{Binding Path=TotalCycleOfftime}"/>
                            <DataGridTextColumn Header="Total Setup"
                                                    Width="*"
                                                    Binding="{Binding Path=TotalSetupTime}"/>
                            <DataGridTextColumn Header="Total Other"
                                                    Width="*"
                                                    Binding="{Binding Path=TotalOther}"/>
                            <DataGridTextColumn Header="Total Time"
                                                    Width="*"
                                                    Binding="{Binding Path=TotalTime}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </Border>
           
        </Grid>
        <Grid Grid.RowSpan="2"
              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibiltyConverter}}"
              Background="#7E000000"> 
            
            <Controls:MetroProgressBar VerticalAlignment="Center"
                                       Width="300" 
                                       Height="10" 
                                       Foreground="#FF1155B8"
                                       IsIndeterminate="True"
                                       Margin="0,0,0,30"/>
            <TextBlock Text="{Binding BusyText}"
                       TextAlignment="Center"
                       Margin="0,20"
                       VerticalAlignment="Center" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
