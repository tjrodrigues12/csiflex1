<Window x:Class="CSIFLEX.PartAnalyzer.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSIFLEX.PartAnalyzer.Views"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
        xmlns:pw="clr-namespace:CSIFLEX.PartAnalyzer.Views.Controls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="10"
        Title="Connection Settings"
        Height="300"
        Width="300"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto" > 
        <Border CornerRadius="2"
                BorderBrush="LightGray"
                Margin="4,2" 
                Grid.Row="0"
                BorderThickness="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <TextBox Controls:TextBoxHelper.Watermark="Enter CSIFLEX database server address"
                         Text="{Binding DbAddress, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Grid.Row="0"
                         Margin="4"/>
                <TextBox Controls:TextBoxHelper.Watermark="ERP API Address"
                         Text="{Binding ApiUrl, UpdateSourceTrigger=PropertyChanged}"
                         Margin="4"                         
                         Grid.Row="1"
                         VerticalAlignment="Center"/>
                <TextBox Controls:TextBoxHelper.Watermark="ERP Api Username"
                         Text="{Binding ApiUserName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="4"                         
                         Grid.Row="2"
                         VerticalAlignment="Center"/>
                <PasswordBox Controls:TextBoxHelper.Watermark="ERP Api Password"
                             Margin="4"
                             x:Name="passwordBox"
                             Grid.Row="3"
                             pw:PasswordBoxAssistant.BindPassword="True"
                             pw:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center">
                </PasswordBox>
                <TextBox Controls:TextBoxHelper.Watermark="ERP Api Company Name" 
                         VerticalAlignment="Center"
                         Margin="4"                         
                         Grid.Row="4"
                         Text="{Binding ApiCompanyName}">
                </TextBox>

                <Button Grid.Row="5"
                        Margin="4,2"
                        Width="70"
                        Command="{Binding Save}"
                        VerticalAlignment="Top">
                    <iconPacks:PackIconMaterial Kind="Floppy"
                                                Height="10"/>
                </Button>

            </Grid>
        </Border>     
</Window>
