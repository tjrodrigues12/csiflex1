<UserControl x:Class="CSIFLEX.PartAnalyzer.Views.PartItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSIFLEX.PartAnalyzer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Border BorderBrush="LightGray"                
            BorderThickness="1"
            Background="White"
            Margin="4,2">
        <StackPanel Orientation="Horizontal"
                    Margin="4">
            <Border BorderBrush="LightGray" 
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="4,2">
                <StackPanel>
                    <TextBlock Text="{Binding MachineName}"
                           HorizontalAlignment="Center"
                           FontSize="18"/>
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="132"/>
                            <ColumnDefinition Width="75"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Reported Cycle Time"
                               ToolTip="Reported time in ERP"
                               Margin="4"/>
                        <TextBlock Grid.Row="0"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding ReportedCycleTime}"
                               Margin="4"/>
                        <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Actual Cycle Time"
                               ToolTip="Reported time in machine"
                               Margin="4"/>
                        <TextBlock Grid.Row="1"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding ActualCycleTime}"
                               Margin="4"/>
                        <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Cycle time as % of reported quoted time"
                               TextWrapping="Wrap" 
                               Margin="4"/>
                        <TextBlock Grid.Row="2"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding ActualToReportedPercentage}"
                               VerticalAlignment="Bottom"
                               Margin="4"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Border BorderBrush="LightGray" 
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="4,2">
                <StackPanel>
                    <TextBlock Text="{Binding WorkId}"
                           HorizontalAlignment="Center"
                           FontSize="18"/>
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="132"/>
                            <ColumnDefinition Width="75"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Parts made"
                               ToolTip="Number of reported parts"
                               Margin="4"/>
                        <TextBlock Grid.Row="0"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding PartsMade}"
                               Margin="4,4,0,4" HorizontalAlignment="Left" Width="67"/>
                        <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Scrapped parts"
                               ToolTip="Reported parts as scrap"
                               Margin="4"/>
                        <TextBlock Grid.Row="1"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding ScrappedParts}"
                               Margin="4"/>
                        <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Scrapped part %"
                               TextWrapping="Wrap" 
                               Margin="4"/>
                        <TextBlock Grid.Row="2"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding ScrappedPartsPercentage}"
                               VerticalAlignment="Bottom"
                               Margin="4"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Border BorderBrush="LightGray" 
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="4,2">
                <StackPanel>
                    <TextBlock Text="{Binding PartNumber}"
                           HorizontalAlignment="Center"
                           FontSize="18"/>
                    <StackPanel Orientation="Horizontal">
                        <Grid Margin="4,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Setup time"
                               ToolTip="Time to setup part"
                               Margin="4"/>
                            <TextBlock Grid.Row="0"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding PartSetupTime}"
                               Margin="4,4,0,4" HorizontalAlignment="Left" Width="42"/>
                            <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="&quot;Other&quot; time"
                               ToolTip="Time spent in &quot;other&quot; status"
                               Margin="4"/>
                            <TextBlock Grid.Row="1"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding PartOtherTime}"
                               Margin="4"/>
                        </Grid>
                        <Grid Margin="4,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Cycle on time"
                               ToolTip="Time in cycle on"
                               Margin="4"/>
                            <TextBlock Grid.Row="0"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding PartCycleOnTime}"
                               Margin="4,4,0,4" HorizontalAlignment="Left" Width="42"/>
                            <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               FontWeight="Bold"
                               Text="Cycle off time"
                               ToolTip="Time spent in cycle off"
                               Margin="4"/>
                            <TextBlock Grid.Row="1"
                               Grid.Column="1" 
                               TextAlignment="Right"
                               Text="{Binding PartCycleOffTime}"
                               Margin="4"/>
                        </Grid>
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
